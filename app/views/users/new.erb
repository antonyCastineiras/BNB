<div class="row">
  <div class="col-sm-6 col-sm-offset-3">

    <h1 class="text-center">Enter Your Details</h1>

    <form class="text-center" role="form" action='/users' method='post'>
      <div class="form-group">
        <label for='email'>
          Email: <input class="form-control" name='email' type='email'></input>
        </label>
      </div>

      <div class="form-group">
        <label for='password'>
          Password: <input class="form-control"name='password' type='password'></input>
        </label>
      </div>

      <div class="form-group">
        <label for='password_confirmation'>
          Confirm your password: <input class="form-control" name='password_confirmation' type='password'></input>
        </label>
      </div>
      <button class="btn" type='submit'>Sign up</button>
    </form>
  </div>
</div>
