<div class="form_container">
  <form action='/users' method='post'>
    <label for='email'>
      Email: <input name='email' type='email'></input>
    </label>
    <label for='password'>
      Password: <input name='password' type='password'></input>
    </label>
    <label for='password_confirmation'>
      Confirm your password: <input name='password_confirmation' type='password'></input>
    </label>
    <label for="phone_number">
      Phone Number: <input type="text" name="phone_number" placeholder="enter if you would like to receive text notifications">      
    </label>
    <button type='submit'>Sign up</button>
  </form>
</div>
