<style>
	h1 {
		text-align: center;
	}

	.form_container {
		width: 90%;
		margin: 0 auto;
		text-align: center;
	}

	form {
		width: 50%;
		margin: auto;
	}

	form input, label, textarea {
		display: block;
		margin: auto;
	}

	form textarea {
		resize: none;
		width: 300px;
		height: 80px;
	}

	form label {
		margin-top: 10px;
	}

	form input[type='submit'] {
		margin-top: 10px;
	}

</style>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
$( function() {
	$( ".datepicker" ).datepicker();
} );
</script>

<h1>List a Space</h1>

<div class="form_container">
	<form action="/spaces" method="post">
		<label for="name">Space name:
			<input type="text" name="name">
		</label>
		<label for="description">Description:
			<textarea name="description"></textarea>
		</label>
		<label for="price_per_night">Price per Night:
			<input type="number" step="0.01" name="price_per_night">
		</label>
		<label for="available_from">Available From:
			<input class="datepicker" type="text" name="available_from" placeholder="dd/mm/yyyy">
		</label>
		<label for="available_to">Available To:
			<input class="datepicker" type="text" name="available_to" placeholder="dd/mm/yyyy">
		</label>
		<input type="submit" value="List My Space">
	</form>
</div>
