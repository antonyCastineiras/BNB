<h1>Spaces to rent</h1>

<ul id="spaces">

	<% @spaces.each do |space| %>
	<a href="/spaces/<%= space.id %>">
		<li class="space_to_rent clearfix">
			<p class="space_name"><%= space.name %></p>
				<img class="space_image" src="" alt="">
			<div class="space_details clearfix">
				<p class="space_description"><%= space.description[0..20]+"..." %></p>
				<p class="space_price">Â£<%= "%.2f" % space.price %></p>
				<p class="space_available_from"><%= space.available_from.strftime("%d/%m/%Y") %> -</p>
				<p class="space_available_to"><%= space.available_to.strftime("%d/%m/%Y") %></p>
			</div>
		</li>
	</a>
<% end %>
</ul>

